program demo()
global

	var start:int64;
	var end:int64;
	var count:int64;
	var holder:int64;
	var size:int64;
	
	var [0:3]input:int64

do

	start init := 0;
	end init := 3;
	holder init := 0;
	size init := 0;
	
		
	// counter setzen
	count init := start;
	
	// abfüllen
	while end >= count do
		debugin [count]input;
		count := count + 1
	endwhile;
	
	// counter setzen
	count := start;
	
	// verändern
	while end >= count do
		holder := holder + [count]input;
		count := count + 1;
		size := size + 1
	endwhile;
	
	// ausgeben
	holder := holder div size;
	debugout holder
endprogram
